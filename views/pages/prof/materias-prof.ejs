<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minhas Matérias</title>
    <link rel="stylesheet" href="/css/materias.css">
</head>
<body>
    <div class="header">
        <h3 class="titulo-spacequest"><a href="/home-prof">SPACE<br>QUEST</a></h3>
        <div class="menu-cardapio">
            <%- include('../../partials/menu-superior') %>
        </div>
    </div>

    <div class="container">
        <h2>Minhas Matérias</h2>
        <div class="caixa-container-materias">
            <% if (materias && materias.length > 0) { %>
                <% materias.forEach(materia => { %>
                    <!-- Card de cada matéria com link para a página de atividades dessa matéria -->
                    <div class="caixa-materia">
                        <h3><%= materia.nome_materia %></h3>
                        <a href="/materia-atividades-prof/<%= materia.id_materia %>" class="btn-ver-atividades">Ver Atividades</a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>Nenhuma matéria encontrada.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
