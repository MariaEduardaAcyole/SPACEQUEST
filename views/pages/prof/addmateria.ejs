<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta http-equiv="refresh" content="30" />
    <title>Cadastro de Matéria</title>
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" type="text/css" href="css/addmateria.css">
</head>

<body>
    <img class="img-fundo" src="/img/fundo.png">

    <div class="header">
        <a href="./home-aluno"> <img src="img/logo.svg" alt="img/logo.svg" class="logo">
        <div class="menu-cardapio">
            <%- include('../../partials/menu-superior') %>
        </div>
    </div>

    <div class="col-1">
        <h2>Cadastro de Matérias</h2>
        
        <form action="/addmateria" method="POST">
            <!-- Campo para escolher a cor da matéria -->
            <label for="corMateria">Cor da Matéria:</label>
            <input type="color" id="corMateria" name="corMateria" class="cor-materia" required><br><br>
    
            <!-- Campo para o nome da matéria -->
            <label for="nomeMateria">Nome da Matéria:</label>
            <input type="text" id="nomeMateria" name="nomeMateria" class="cadastros" size="40"><br>
            <label for="idProfessor">Professor:</label>
            <select id="idProfessor" name="idProfessor" class="cadastros" required>
                <option value="" disabled selected>Selecione um Professor</option>
                <% professores.forEach(function(professor) { %>
                    <option value="<%= professor.id_professor %>"><%= professor.nome %></option>
                <% }); %>
            </select>
            
            <br><br>
    
            <!-- Botão de cadastro -->
            <button type="submit" class="button">CADASTRAR</button>
        </form>
    </div>
</body>

</html>
