<!DOCTYPE html>
<html lang="pt-br">

<head>
    <!-- Configurações Meta e Links -->
    <meta http-equiv="refresh" content="30" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mural de Minigames</title>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/materia-mural.css">
</head>

<body>
    <!-- Cabeçalho -->
    <div class="header">
        <h3 class="titulo-spacequest"><a href="/home-aluno">SPACE<br>QUEST</a></h3>
        <div class="menu-cardapio">
            <%- include('../../partials/menu-superior') %>
        </div>
    </div>

    <!-- Conteúdo Principal -->
    <div class="container">
        <!-- Informações da Matéria -->
        <div class="col-1">
            <div class="img-materia" style="background-color: <%= materia.cor_materia || '#ffffff' %>;">
                <div class="caixa-materia">
                    <h2><%= materia.nome_materia %></h2>
                </div>
            </div>
        </div>

        <!-- Navegação e Minigames -->
        <div class="col-2">
            <div class="col-navegacao">
                <div class="navegacao">
                    <a href="/materia-downloads/<%= id %>" class="paginas"><h2>Downloads</h2></a>
                    <a href="/materia-atividades/<%= id %>" class="paginas"><h2>Atividades</h2></a>
                    <a href="/materia-mural/<%= id %>" class="paginas"><h2>Minigame</h2></a>
                </div>
            </div>

            <!-- Lista de Minigames -->
            <div class="col-4">
                <% if (minigames && minigames.length > 0) { %>
                    <% minigames.forEach(minigame => { %>
                        <div class="postagem">
                            <p class="circulo-materia" style="background-color: <%= materia.cor_materia || '#ffffff' %>;"></p>
                            <h3 class="titulo-atv">
                                <a href="/quiz/<%= minigame.id_minigame %>">
                                    <%= minigame.nome_minigame %>
                                </a>
                            </h3>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>Não há minigames cadastrados para esta matéria.</p>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>
