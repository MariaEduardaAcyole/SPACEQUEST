<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="refresh" content="30" />
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/materia-atividades.css">

    <head>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    </head>

    <title>Atividades da Matéria</title>
</head>

<body>
    <img class="img-fundo" src="/img/fundo.png">

    <div class="header">
        <a href="../home-aluno"> <img src="/img/logo.svg" alt="img/logo.svg" class="logo">
        <div class="menu-cardapio">
            <%- include('../../partials/menu-superior') %>
        </div>
    </div>

    <div class="container">
        <div class="col-1">
            <div class="img-materia" style="background-color: <%= materia.cor_materia || '#ffffff' %>;">
                <div class="caixa-materia">
                    <h2 class="nomemateria">
                        <%= materia.nome_materia %>
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="col-navegacao">
                <div class="navegacao">
                    <a href="/materia-downloads/<%= idMateria %>" class="paginas">
                        <h2>Downloads</h2>
                    </a>
                    <a href="/materia-atividades/<%= idMateria %>" class="paginas">
                        <h2>Atividades</h2>
                    </a>
                    <a href="/materia-mural/<%= idMateria %>" class="paginas">
                        <h2>Minigame</h2>
                    </a>

                </div>
            </div>

            <div class="col-4">
                <% if (atividades && atividades.length> 0) { %>
                    <% atividades.forEach(atividade=> { %>
                            <a class="postagem" href="/entrega-atividade/<%= atividade.id_atividade %>">
                                <p class="circulo-materia"
                                    style="background-color: <%= materia.cor_materia || '#ffffff' %>;"></p>

                                <h3 class="titulo-atv">

                                    <%= atividade.titulo %>
                                </h3>
                                <p class="pontos">
                                    <%= atividade.pontos %>
                                </p>
                                <p class="data-vencimento">
                                    <i class="fas fa-calendar-alt"></i>
                                    <%= atividade.data_vencimento %>
                                </p>
                            
                            </a>
                        <% }) %>
                        <% } else { %>
                            <p>Não há atividades cadastradas para esta matéria.</p>
                            <% } %>


            </div>
        </div>
    </div>
    </div>
</body>

</html>