<!DOCTYPE html>
<html lang="pt-br">

<head>
    <!-- LINKS -->
    <meta http-equiv="refresh" content="30" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATIVIDADE</title>
    <link rel="stylesheet" type="text/css" href="/css/atividade.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<body>

    <img class="img-fundo" src="/img/fundo.png">

    <div class="header">

        <h3 class="titulo-spacequest"><a href="../home-aluno">SPACE<br> ‎ ‎ QUEST</h3> </a>

        <div class="menu-cardapio"> 
            <%- include('../../partials/menu-superior') %>
        </div>

    </div>

    <div class="atras">
        <div class="col-1">
            <div class="instrucoes">
                <h1 class="titulo">
                    <%= atividade.titulo %>
                </h1>
                <p >
                    <h3 class="vencimento-atv">
                        <%= atividade.data_vencimento
                            ? new Date(atividade.data_vencimento).toLocaleDateString('pt-BR', {
                                day: '2-digit',
                                month: '2-digit',
                                year: 'numeric'
                            })
                            : 'Data não disponível'
                        %>
                    </h3>
                </p>
                
                
                <p class="descricao">
                    <%= atividade.descricao %>
                </p>
            </div>

            <div class="caixa-arquivos">
                <div class="linha-1">
                    <div class="anexo">
                        <img class="img-anexo" src="/img/anexo-icon.png" alt="Anexo">
                    </div>
                    <div class="anexo">
                        <img class="img-anexo" src="/img/planilhas-icon.png" alt="Planilhas">
                    </div>
                    <div class="anexo">
                        <img class="img-anexo" src="/img/docs-icon.png" alt="Documentos">
                    </div>
                    <div class="anexo">
                        <img class="img-anexo" src="/img/slides-icon.png" alt="Slides">
                    </div>
                    <div class="anexo">
                        <img class="img-anexo" src="/img/formularios-icon.png" alt="Formulários">
                    </div>
                </div>

                <!-- Formulário para envio da entrega -->
                <div class="linha-2">
                    <form action="/entrega-atividade/<%= atividade.id_atividade %>" method="POST"
                        enctype="multipart/form-data">

                        
                            
                            <input type="file" name="file" required class="anexado" img class="img-anexado" src="/img/anexo-icon.png" alt="Upload">
                       

                </div>
            </div>
        </div>

            <div class="caixa-entrega">
                <% respostas.forEach((entrega) => { %>
                    <h3>
                        <%= entrega.data_entrega
                            ? new Date(entrega.data_entrega).toLocaleDateString('pt-BR', {
                                day: '2-digit',
                                month: '2-digit',
                                year: 'numeric'
                            })
                            : 'Data não disponível'
                        %>
                    </h3>
                <% }); %>
            <img class="astrosentado" src="/img/astrosentado.png" alt="Astronauta Sentado">

            <button type="submit" class="entregar-button">ENTREGAR</button>
        </div>


        </form>

    </div>

</body>
<script>
    new Date(atividade).toLocaleDateString('en-US', { day: 'numeric', month: 'long',  year: 'numeric' });

</script>
</html>